{
  "name": "Laravel Sample",
  "description": "Laravel for Project",
  "addons": ["heroku-postgresql:hobby-dev"],
  "buildpacks": [{"url":"https://github.com/heroku/heroku-buildpack-php.git"}],
  "environments": {
    "test": {
      "scripts": {
        "test": "phpunit"
      }
    }
  },
